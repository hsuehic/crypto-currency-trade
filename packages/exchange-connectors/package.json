{
  "name": "@itrade/exchange-connectors",
  "version": "0.1.0",
  "description": "Exchange connectors with REST and WebSocket support",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --format cjs && tsdown src/index.ts --format esm && tsc --project tsconfig.build.json && cp dist/exchange-connectors/src/index.d.ts dist/ && cp dist/exchange-connectors/src/index.d.ts.map dist/ 2>/dev/null || true",
    "dev": "tsdown src/index.ts --format esm --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@itrade/core": "workspace:*",
    "axios": "^1.6.7",
    "ws": "^8.16.0",
    "crypto": "^1.0.1",
    "decimal.js": "^10.4.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/ws": "^8.5.10",
    "@types/uuid": "^9.0.8",
    "tsdown": "^0.2.16"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}
