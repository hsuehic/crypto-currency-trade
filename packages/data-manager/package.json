{
  "name": "@itrade/data-manager",
  "version": "0.1.0",
  "description": "Data management and historical data handling for crypto trading",
  "main": "dist/data-manager/src/index.js",
  "types": "dist/data-manager/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/data-manager/src/index.d.ts",
      "require": "./dist/data-manager/src/index.js",
      "import": "./dist/data-manager/src/index.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "dev": "tsdown src/index.ts --format esm --watch",
    "sync-schema": "tsx sync-scheme-to-db.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@itrade/core": "workspace:*",
    "@itrade/utils": "workspace:*",
    "decimal.js": "^10.4.3",
    "mysql2": "^3.6.5",
    "node-csv": "^0.1.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.14",
    "typeorm": "0.3.27"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/pg": "^8.10.9",
    "dotenv": "^17.2.3",
    "tsdown": "^0.2.16"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
